{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block logo %}
    {{ parent() }}

    <div class="nav pull-right">
        <ul class="nav">
            <li>
                <a href="{{ path('music_website_default_index') }}">
                    <i class="icon-home"></i>
                    {{ 'backend.sonata_admin.btn_back_home' | trans }}
                </a>
            </li>
            <li class="divider-vertical"></li>
        </ul>
    </div>
